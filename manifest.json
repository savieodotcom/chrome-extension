{
  "name": "Savieo: Free Video Downloader",
  "short_name": "Savieo",
  "description": "Your #1 tool for saving videos and tracks off the open web.",
  "homepage_url": "https://savieo.com",
  "manifest_version": 2,
  "version": "1.1",

  "offline_enabled": false,
  "minimum_chrome_version": "19.0",

  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_title": "Save @Savieo.com",
    "default_icon": {
      "19": "icon_19.png",
      "38": "icon_19@2x.png"
    }
  },

  "permissions": [
  	"tabs"
  ]
}
